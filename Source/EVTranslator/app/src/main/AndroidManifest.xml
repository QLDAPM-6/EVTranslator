<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.qldapm.evtranslator" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".presentation.activities.HomeTranslateActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.activities.TranslatingActivity"
            android:label="@string/title_activity_translate1"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".presentation.activities.TranslatedActivity"
            android:label="@string/title_activity_translate2"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".presentation.activities.FolderActivity"
            android:label="@string/title_activity_folder"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
